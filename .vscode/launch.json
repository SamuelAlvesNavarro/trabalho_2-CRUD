{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: Executar Programa",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main.exe",  // Caminho do seu arquivo executável
            "args": [],  // Argumentos da linha de comando (se houver)
            "stopAtEntry": false,  // Pare ou não na entrada
            "cwd": "${workspaceFolder}",  // Diretório de trabalho
            "environment": [],
            "externalConsole": true,  // Abrir ou não o terminal externo para execução
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe",  // Caminho para o gdb.exe (alterar conforme necessário)
            "setupCommands": [
                {
                    "description": "Habilitar a formatação para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compilar",  // Nome da tarefa de compilação
            "internalConsoleOptions": "neverOpen",
            "logging": {
                "exceptions": true,
                "trace": true
            }
        }
    ]
}
